{
    "name": "react-tsoa-server-boilerplate",
    "version": "0.0.0",
    "private": true,
    "main": "dist/index.js",
    "license": "MIT",
    "scripts": {
        "start": "node dist",
        "build": "yarn tsoa:generate && tsc --outDir ../build/server",
        "start:dev": "yarn nodemon& tsnd --respawn --rs src/index.ts",
        "tsoa:generate": "yarn tsoa swagger && yarn tsoa routes"
    },
    "nodemonConfig": {
        "watch": "src/**/*.controller.ts",
        "exec": "yarn tsoa:generate"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.5",
        "express": "^4.17.1",
        "inversify": "^5.0.5",
        "inversify-binding-decorators": "^4.0.0",
        "lodash": "^4.17.20",
        "mongoose": "^5.11.8",
        "morgan": "^1.10.0",
        "reflect-metadata": "^0.1.13",
        "tsoa": "^3.4.0",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.9",
        "@types/lodash": "^4.14.165",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14.14.10",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "nodemon": "^2.0.6",
        "prettier": "^2.2.1",
        "ts-node-dev": "^1.0.0",
        "typescript": "^4.1.2"
    }
}
